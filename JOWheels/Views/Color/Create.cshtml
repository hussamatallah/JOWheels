@model JOWheels.Models.Color

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS File -->
<link href="~/styles/inputstyle/inputstyle.css" rel="stylesheet" />


<!-- Heading -->
<h1>Add Color</h1>


<hr />


<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" id="colorForm">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center mb-3">
                <label asp-for="Name" class="control-label">Color Name</label>
                <input asp-for="Name" class="form-control" id="inp" required />
                <span id="NameError" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center mb-3">
                <input type="submit" value="Create" class="btn btn-primary mx-2" style="background-color:#007A3D" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>

        </form>
    </div>
</div>


<!-- A links For Including jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#colorForm").submit(function (event) {
                var isValid = true;
                var nameInput = $("#inp").val();

                if (nameInput === "") {
                    $("#NameError").text("Can't be NULL");
                    isValid = false;
                } else {
                    // If the input is not empty, clear any previous error message
                    $("#NameError").text("");
                }

                // If the form is invalid, prevent form submission
                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
}
