@model IEnumerable<JOWheels.Models.Body>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Heading -->
<h1>Bodies</h1>


<!-- Button For Adding Body -->
<p>
    <a asp-action="Create" class="btn btn-primary" style="background-color:#007A3D">Add Body</a>
</p>


<!-- Table of Content -->
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col" style="color: white !important; background-color: #343a40 !important; text-align: center !important;">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col" style="color: white !important; background-color: #343a40 !important; text-align: center !important;">
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th scope="col" style="color: white !important; background-color: #343a40 !important; text-align: center !important;">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th scope="col" style="color: white !important; background-color: #343a40 !important; text-align: center !important;">
                Options
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th style="text-align: center !important">
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <th style="text-align: center !important">
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </th>
            <th style="text-align: center !important">
                <img width="100" height="100" src="~/Photos/Bodies/@Html.DisplayFor(modelItem => item.Image)"/>
            </th>
            <th style="text-align: center !important">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:orange">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class='btn btn-primary'>Delete</a>
            </th>
        </tr>
}
    </tbody>
</table>
