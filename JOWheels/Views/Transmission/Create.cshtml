@model JOWheels.Models.Transmission

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS File -->
<link href="~/styles/inputstyle/inputstyle.css" rel="stylesheet" />


<!-- Heading -->
<h1 class="text-center">Add Transmission</h1>


<hr />


<!-- Center the form -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" id="createForm">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center mb-3">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" id="inp" name="Type" required />
                <span id="TypeError" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center mb-3">
                <input type="submit" value="Create" class="btn btn-primary mx-2" style="background-color:#007A3D" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>

        </form>
    </div>
</div>


<!-- A link for Including jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#createForm').submit(function (e) {
                $('#TypeError').text('');

                var typeValue = $('#inp').val().trim();

                if (typeValue === '') {
                    $('#TypeError').text("Can't be NULL");
                    e.preventDefault();     // Prevent form submission
                }
            });
        });
    </script>
}
