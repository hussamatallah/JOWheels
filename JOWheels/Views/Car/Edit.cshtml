@model JOWheels.Models.Car

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS File -->
<link href="~/styles/inputstyle/inputstyle.css" rel="stylesheet" />

<style>
    textarea.form-control {
        border: 1px solid black;
        background-color: white;
        padding: 8px;
        width: 100%;
    }

        textarea.form-control:focus {
            outline: none;
            border-color: #007A3D;
            box-shadow: 0 0 5px rgba(0, 122, 61, 0.5);
            border-radius: 10px;
            text-align: center;
        }
</style>

<!-- Headings -->
<h1 class="text-center mb-4">Edit</h1>
<h4 class="text-center mb-4">Car</h4>


<hr />


<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Form fields -->
            <div class="form-group text-center mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" id="inp" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" id="inp" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="PlateNumber" class="control-label">Plate Number</label>
                <input asp-for="PlateNumber" class="form-control" id="inp" required />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" id="inp" required></textarea>
                <span asp-validation-for="Description" id="inp" class="text-danger"></span>
            </div>

            <div>
                <div class="form-group text-center mb-3">
                    <label asp-for="Image" class="control-label">Thumbnail</label>
                    <input asp-for="Image" id="inp" type="file" name="Upload" class="form-control" required />
                </div>
            </div>

            <div>
                <div class="form-group text-center mb-3">
                    <label class="control-label">Photos</label>
                    <input type="file" multiple name="UploadGallary" class="form-control" required />
                </div>
            </div>

            <div class="form-group text-center mb-3 mb-3 d-none">
                <label asp-for="EntityId" class="control-label text-center">User Name</label>
                <select asp-for="EntityId" id="inp" class="form-control text-center" asp-items="ViewBag.EntityId"></select>
                <span asp-validation-for="EntityId" class="text-danger"></span>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="BrandId" class="control-label">Brand Name</label>
                <select asp-for="BrandId" id="inp" class="form-control BrandId" asp-items="ViewBag.BrandId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="BodyId" class="control-label">Body Name</label>
                <select asp-for="BodyId" id="inp" class="form-control BodyId" asp-items="ViewBag.BodyId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="TransmissionId" class="control-label">Transmission Type</label>
                <select asp-for="TransmissionId" id="inp" class="form-control" asp-items="ViewBag.TransmissionId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="FuleId" class="control-label">Fule Type</label>
                <select asp-for="FuleId" id="inp" class="form-control" asp-items="ViewBag.FuleId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="ColorId" class="control-label">Color</label>
                <select asp-for="ColorId" id="inp" class="form-control" asp-items="ViewBag.ColorId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="SeatId" class="control-label">Number of Seats</label>
                <select asp-for="SeatId" id="inp" class="form-control" asp-items="ViewBag.SeatId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="ConditionId" class="control-label">State</label>
                <select asp-for="ConditionId" id="inp" class="form-control" asp-items="ViewBag.ConditionId" required></select>
            </div>
            <div class="form-group text-center mb-3">
                <label asp-for="MileageId" class="control-label">Distance traveled</label>
                <select asp-for="MileageId" id="inp" class="form-control" asp-items="ViewBag.MileageId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="CustomId" class="control-label">State of Custom</label>
                <select asp-for="CustomId" id="inp" class="form-control" asp-items="ViewBag.CustomId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="LicenseId" class="control-label">State of License</label>
                <select asp-for="LicenseId" id="inp" class="form-control" asp-items="ViewBag.LicenseId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="InsuranceId" class="control-label">Insurance Type</label>
                <select asp-for="InsuranceId" id="inp" class="form-control" asp-items="ViewBag.InsuranceId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="PaymentId" class="control-label">Payment Method</label>
                <select asp-for="PaymentId" id="inp" class="form-control" asp-items="ViewBag.PaymentId" required></select>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="YearId" class="control-label">Model Year</label>
                <select asp-for="YearId" id="inp" class="form-control" asp-items="ViewBag.YearId" required></select>
            </div>

            <!-- Buttons -->
            <div class="form-group d-flex justify-content-center mb-3">
                <input type="submit" value="Save" class="btn btn-primary mx-2" style="background-color:orange" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>
        </form>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".BodyId").prop("disabled", true);
            $(".BrandId").change(function () {
                $.ajax({
                    url: "/api/Cars/" + $(this).val(),
                    method: "GET",
                    dataType: "json",
                    success: function (data) {
                        $(".BodyId").prop("disabled", false);
                        $(".BodyId option").remove();
                        $(".BodyId").append("<option value='' selected>-- Select Body --</option>");
                        $.each(data, function (k, v) {
                            $(".BodyId").append("<option value='" + v.id + "'>" + v.name + "</option>");
                        });
                    }
                });
            });
        });
    </script>
}
