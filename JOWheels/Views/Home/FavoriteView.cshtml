@model IEnumerable<JOWheels.Models.Car>

@{
    ViewData["Title"] = "Cars";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<style>
    #announImg {
        width: 100%;
        height: 250px;
        object-fit: cover;
        background-size: cover;
    }

    #fav {
        font-size: 14px;
        padding: 12px;
        border-radius: 8px;
        border: none;
        background-color: #CE1126;
        color: #fff;
        letter-spacing: 1.5px;
    }

        #fav:hover {
            background-color: #701608;
        }
</style>


<!-- Announcements Section Start -->
<section id="services" class="services section">

    <!-- Headings -->
    <div class="container section-title" data-aos="fade-up">
        <h2>CARS</h2>
        <p>Favorites Announcements<br></p>
    </div>


    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-5">

            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-md-6" data-aos="zoom-in" data-aos-delay="200">
                    <div class="service-item">

                        <!-- Image -->
                        <div class="img">
                            <img id="announImg" src="~/Photos/Cars/@item.Image" class="img-fluid" alt="">
                        </div>

                        <div class="details position-relative" style="margin: -0px 30px 0 30px !important;">
                            <div class="icon">
                                <i class="fa-solid fa-warehouse"></i>
                            </div>

                            <a href="service-details.html" class="stretched-link">
                                <h3>@item.Title</h3>
                            </a>

                            <p style="font-weight: bold"><span>Price : </span>@item.Price</p>

                            <p style="font-weight: bold"><span>Description : </span>@item.Description</p>

                        </div>

                        <div style="text-align:center">
                            @{
                                var favValue = "";

                                if (item.IsFavorite == false)
                                {
                                    favValue = "Add to Favorites";
                                }

                                else
                                {
                                    favValue = "Remove from Favorites";
                                }
                            }
                            <a class="btn" id="fav" asp-action="FavValue"
                               asp-route-carId="@item.Id">@favValue</a>
                        </div>

                    </div>
                </div>
            }

        </div>

    </div>

</section>
<!-- /Announcements Section End -->
