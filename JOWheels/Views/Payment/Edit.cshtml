@model JOWheels.Models.Payment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS File -->
<link href="~/styles/inputstyle/inputstyle.css" rel="stylesheet" />


<!-- Headings -->
<h1 class="text-center mb-4">Edit</h1>
<h4 class="text-center mb-4">Payment</h4>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" id="paymentForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group text-center mb-3">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control mx-auto" id="inp" name="Type" required />
                <span id="TypeError" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center mb-3">
                <input type="submit" value="Save" class="btn btn-primary mx-2" style="background-color:orange" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>
        </form>
    </div>
</div>


<!-- A links For Including jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#paymentForm").submit(function (event) {
                var isValid = true;
                var typeInput = $("#inp").val();

                if (typeInput === "") {
                    $("#TypeError").text("Can't be NULL");
                    isValid = false;
                } else {
                    // Clear the error message if valid
                    $("#TypeError").text("");
                }

                // Prevent form submission if invalid
                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
}
