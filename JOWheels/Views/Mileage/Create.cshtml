@model JOWheels.Models.Mileage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS File -->
<link href="~/styles/inputstyle/inputstyle.css" rel="stylesheet" />


<!-- Heading -->
<h1 class="text-center">Add Mileage</h1>


<hr />


<!-- Center the form -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" id="mileageForm">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center mb-3">
                <label asp-for="Mile" class="control-label"></label>
                <input asp-for="Mile" class="form-control" id="inp" required />
                <span id="MileError" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center mb-3">
                <input type="submit" value="Create" class="btn btn-primary mx-2" style="background-color:#007A3D" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>

        </form>
    </div>
</div>


<!-- A links For Including jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#mileageForm").submit(function (event) {
                var isValid = true;
                var mileInput = $("#inp").val();

                if (mileInput === "") {
                    $("#MileError").text("Can't be NULL");
                    isValid = false;
                } else {
                    // Clear the error message if input is valid
                    $("#MileError").text("");
                }

                // Prevent form submission if validation fails
                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
}