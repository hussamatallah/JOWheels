@model JOWheels.Models.Region

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS File -->
<link href="~/styles/inputstyle/inputstyle.css" rel="stylesheet" />


<!-- Heading -->
<h1 class="text-center">Add Region</h1>


<hr />


<!-- Center the form -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center mb-3">
                <label asp-for="Name" class="control-label">Region Name</label>
                <input asp-for="Name" class="form-control" id="inp" required />
                <span id="Name" class="text-danger"></span>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="GovernorateId" class="control-label">Governorate Name</label>
                <select asp-for="GovernorateId" id="inp" class="form-control" asp-items="ViewBag.GovernorateId" required></select>
            </div>

            <div class="form-group d-flex justify-content-center mb-3">
                <input type="submit" value="Create" class="btn btn-primary mx-2" style="background-color:#007A3D" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
