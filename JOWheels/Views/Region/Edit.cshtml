@model JOWheels.Models.Region

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS File -->
<link href="~/styles/inputstyle/inputstyle.css" rel="stylesheet" />

<!-- Headings -->
<h1 class="mb-4 text-center">Edit</h1>
<h4 class="mb-4 text-center">Region</h4>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group text-center mb-3">
                <label asp-for="Name" class="control-label">Region Name</label>
                <input asp-for="Name" class="form-control mx-auto" id="inp" required />
                <span id="Name" class="text-danger"></span>
            </div>

            <div class="form-group text-center mb-3">
                <label asp-for="GovernorateId" class="control-label">Governorate Name</label>
                <select asp-for="GovernorateId" class="form-control mx-auto" id="inp" asp-items="ViewBag.GovernorateId" required></select>
                <span asp-validation-for="GovernorateId" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center mb-3">
                <input type="submit" value="Save" class="btn btn-primary mx-2" style="background-color:orange" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
