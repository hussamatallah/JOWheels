@* مكاتب لتفعيل ال session*@
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>JOWheels</title>
    <meta name="description" content="">
    <meta name="keywords" content="">


    <!-- Main CSS File -->
    <link href="~/User/assets/css/main.css" rel="stylesheet">

    <!-- Change Content Style => CSS File -->
    <link href="~/styles/changecontentstyle/changecontentstyle.css" rel="stylesheet" />

    <!-- Footer CSS File -->
    <link href="~/styles/footerstyle/footerstyle.css" rel="stylesheet" />

    <!-- About Section CSS File -->
    <link href="~/styles/aboutsectionstyle/aboutstyle.css" rel="stylesheet" />

    <!-- Favicons -->
    <link href="~/User/assets/img/favicon.png" rel="icon">
    <link href="~/User/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/User/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/User/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/User/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/User/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/User/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Font Awesome CDN ( For Icons ) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        a{
            text-decoration: none;
            list-style: none;
        }

        #logout {
            width: 80px;
            padding: 10px 15px;
            color: #FFFFFF;
            text-decoration: none;
            border-radius: 5px;
        }

            #logout:hover {
                background-color: #CE1126;
            }

        .username-logout {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .username {
            margin: 0;
            font-size: 20px;
        }

        #aboutImg {
            width: 100%;
            height: 300px;
            object-fit: cover;
            background-size: cover;
        }

     #add {
        padding: 8px;
        font-size: 16px;
        border-radius: 8px;
        outline: none;
        letter-spacing: 1.5px;
        color: #fff;
    }
    </style> 
</head>

<body class="index-page">

    <!-- Navbar Start -->
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center">

            <!-- Logo --></>
            <a asp-action="Index" asp-controller="Home" class="logo d-flex align-items-center me-auto">
                <h1 id="logo" class="sitename navbar-brand sitename"><span>JO</span>Wheels</h1>
            </a>

            <!-- Display the User Name -->
            @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
            {
                <div class="username-logout mx-5">
                    <p class="username">Welcome @HttpContextAccessor.HttpContext.Session.GetString("UserName")</p>
                </div>
            }

            <!-- Nave-items -->
            <nav id="navmenu" class="navmenu ml-5">
                <ul>
                    <li><a href="~/Home/Index">Home</a></li>
                    <li><a href="~/Home/Dealerships">Dealerships</a></li>
                    <li><a href="#services">Services</a></li>
                    <li><a href="~/Home/FavoriteView">Favorites</a></li>
                </ul>

                <!-- NavBar Toggler -->
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <!-- Login and Logout Buttons -->
            @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
            {
                <div class="username-logout mx-5">
                    <a class="cat_btn" id="logout" asp-action="Logout" asp-controller="Account">Logout</a>
                </div>
            }
            else
            {
                <a class="cta-btn" asp-action="Login" asp-controller="Account" style="background-color:#007A3D">Login</a>
            }

        </div>
    </header>
    <!-- Navbar End -->


    <main class="main">

        <!-- Hero Section Start -->
        <section id="hero" class="hero section dark-background" style="font-family: Orbitron, sans-serif !important;">

            <!-- Background Image -->
            <img src="~/Photos/IndexBG/IndexBG.jpg" alt="" data-aos="fade-in">

            <!-- Hero Headings -->
            <div class="container d-flex flex-column align-items-center">

                <h2 data-aos="fade-up" data-aos-delay="100" class="mb-3">You can buy & sale any</h2>

                <div class="type d-inline-block">
                    <span class="change-content" data-aos="fade-up" data-aos-delay="50"></span> <span style="font-weight:lighter">you want </span>
                </div>
            </div>

        </section>

        <!-- Add Announcement Button -->
        <div class="mt-4 text-center">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                    {
                            <a id="add" asp-action="Create" asp-controller="Car" style="background-color:#007A3D">Add Announcement</a>
                    }
        </div>

        @RenderBody()


        <!-- Services Section Start -->
        <section id="services" class="services-2 section light-background">

            <!-- Headings -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Services</h2>
                <p>CHECK OUR SERVICES</p>
            </div>

            <div class="container">
                <div class="row gy-4">

                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-item d-flex position-relative h-100">
                            <i class="fa-solid fa-shop icon flex-shrink-0"></i>
                            <div>
                                <h4 class="title"><a href="#portfolio" class="stretched-link">Buying a vehicle</a></h4>
                                <p class="description">You can search for your desired car and make a purchase.</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                        <div class="service-item d-flex position-relative h-100">
                            <i class="fa-regular fa-handshake icon flex-shrink-0"></i>
                            <div>
                                <h4 class="title"><a href="#portfolio" class="stretched-link">Selling a vehicle</a></h4>
                                <p class="description">You can advertise your car for sale.</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </section>
        <!-- Services Section End -->


        <!-- About Section Start -->
        <section class="about mt-2" id="about">
            <div class="container">

                <!-- Title -->
                <div class="main-txt">
                    <h1>About</h1>
                </div>

                <div class="row" style="margin-top: 20px;">

                    <!-- Companies Section -->
                    <div class="col-md-6 py-3 py-md-0">
                        <div class="card">
                            <div id="slide" class="carousel slide" data-bs-ride="carousel">

                                <!-- Indicators -->
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#slide" data-bs-slide-to="0" class="active bg-light" aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#slide" data-bs-slide-to="1" class="bg-light" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#slide" data-bs-slide-to="2" class="bg-light" aria-label="Slide 3"></button>
                                </div>

                                <!-- Images -->
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img id="aboutImg" class="img-fluid about-img" src="~/photos/AboutSection/IndexCompanies/C1.png" alt="">
                                    </div>
                                    <div class="carousel-item">
                                        <img id="aboutImg" class="img-fluid about-img" src="~/photos/AboutSection/IndexCompanies/C2.jpg" alt="">
                                    </div>
                                    <div class="carousel-item">
                                        <img id="aboutImg" class="img-fluid about-img" src="~/photos/AboutSection/IndexCompanies/C3.jpg" alt="">
                                    </div>
                                </div>

                                <!-- Left and Right Buttons -->
                                <button class="carousel-control-prev" data-bs-target="#slide" button="button" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>

                                <button class="carousel-control-next" data-bs-target="#slide" button="button" data-bs-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>

                            </div>

                            <!-- Content -->
                            <div class="card-body">
                                <h3>+100 Dealerships</h3>
                                <p>A strong relationships with several dealerships, and now many of them work closely with us to provide a wide range of vehicles to our clients. It allows us to offer competitive pricing and personalized service, ensuring that every customer finds the perfect car for their needs.</p>
                                <a href="#portfolio" target="_self"><button class="See">See more...</button></a>
                            </div>
                        </div>
                    </div>

                    <!-- Cars Section -->
                    <div class="col-md-6 py-3 py-md-0">
                        <div class="card">
                            <div id="slide2" class="carousel slide" data-bs-ride="carousel">

                                <!-- Indicators -->
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#slide2" data-bs-slide-to="0" class="active bg-light" aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#slide2" data-bs-slide-to="1" class="bg-light" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#slide2" data-bs-slide-to="2" class="bg-light" aria-label="Slide 3"></button>
                                </div>

                                <!-- Images -->
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img id="aboutImg" class="img-fluid about-img" src="~/photos/AboutSection/IndexCars/BYD.jpg" alt="">
                                    </div>
                                    <div class="carousel-item">
                                        <img id="aboutImg" class="img-fluid about-img" src="~/photos/AboutSection/IndexCars/Ioniq'.jpg" alt="">
                                    </div>
                                    <div class="carousel-item">
                                        <img id="aboutImg" class="img-fluid about-img" src="~/photos/AboutSection/IndexCars/ID-6.jpg" alt="">
                                    </div>
                                </div>

                                <!-- Left and Right Buttons -->
                                <button class="carousel-control-prev" data-bs-target="#slide2" button="button" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>

                                <button class="carousel-control-next" data-bs-target="#slide2" button="button" data-bs-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>

                            </div>

                            <!-- Content -->
                            <div class="card-body">
                                <h3>+1000 Cars</h3>
                                <p>Our website offers an extensive selection of vehicles, with hundreds of cars from a wide range of makes and models. Whether you're looking for a compact sedan, a rugged SUV, or a luxury sports car, we have something to suit every taste and budget.</p>
                                <a href="#portfolio" target="_self"><button class="See">See more...</button></a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </section>
        <!-- About Section End -->

    </main>


    <!-- Footer Star -->
    <footer id="footer">
        <h1 style="font-family:'Orbitron', sans-serif !important;"><span>JO</span>Wheels</h1>
        <div class="icon"><i class="fa-solid fa-graduation-cap"></i></div>
        <p>The final project</p>
        <p>Designed by :</p>
        <p>Ghaith M Al-Khateeb || Omar Q Qasem || Husam R Atallah</p>
    </footer>
    <!-- Footer End -->


    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/User/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/User/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/User/assets/vendor/aos/aos.js"></script>
    <script src="~/User/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/User/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/User/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/User/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/User/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <!-- Main JS File -->
    <script src="~/User/assets/js/main.js"></script>

</body>

</html>